script.
  "use strict";
  window.PtAgent = navigator.userAgent.toLowerCase();
  if (
    (navigator.appName === "Netscape" && window.PtAgent.indexOf("trident") !== -1)
    || window.PtAgent.indexOf("msie") !== -1
  ) {
    if (document.cookie.indexOf("stillie") === -1) {
      var wannaUseIE = window.confirm("Internet Explorer는 Microsoft에서 공식적으로 폐기한 브라우저에요.\n이 블로그는 Internet Explorer를 지원하지 않기 때문에 제대로 보이거나 작동하지 않을 거에요.\n그래도 Internet Explorer로 방문하시겠어요?");
      if (wannaUseIE === true) {
        document.cookie = "stillie=true";
      } else {
        alert("이전 페이지로 돌아갈게요.");
        history.back();
      }
    }
  }

header.global.no-print

  a#identity.left.no-color.no-underline(href="/")
    s_if_var_img-logo
      img(src="[##_var_img-logo_##]" alt="[##_title_##] 아이덴티티")
    span= "[##_title_##]"

  nav#menu.left
    | [##_blog_menu_##]

  //- Just for bind two components to right-side
  div#others.inherit.right

    ul#shortcuts
      s_if_var_url-home
        a#goto-home.no-color(href="[##_var_url-home_##]" target="_self" title="홈페이지로 이동")
          include ../icons/home
      s_if_var_url-github
        a#goto-github.no-color(href="[##_var_url-github_##]" target="_blank" title="깃허브 프로필로 이동")
          include ../icons/github

    div#modarkbul(title="밝기 모드 전환")
      include ../icons/moon
      div.container
        div.border
          label.no-event
            input#is-dark(type="checkbox" name="is-dark")
      include ../icons/sun

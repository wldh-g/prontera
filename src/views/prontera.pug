
doctype
html(lang="ko")

  head

    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="theme-color" content="#ffffff")
    meta(name="author" content="[##_blogger_##]")

    include scripts/modarkbul
    include scripts/ie-detection
    include scripts/pt-config
    include scripts/mathjax
    //- include scripts/feature-detection

    script(src="./images/highlight.min.js" defer)
    script(src="./images/onload.js" async)
    script(src="./images/functions.js" defer)

    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans+KR:400,700&display=swap&subset=korean")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Mono:400,400i,700,700i&display=swap")
    link(rel="stylesheet" href="./style.css")
    style(type="text/css").
      * {
        --color-hl: [##_var_color-hl_##];
        --color-hl-inv: var(--color-[##_var_color-hl-inv_##]);
        --color-hl-alter: [##_var_color-hl-alter_##];
        --color-hl-orig: [##_var_color-hl_##];
      }
      a, p, p *, span, span *, h1, h2, h3, h4, h5, h6 {
        --color-hl: [##_var_color-hl-alter_##];
      }

    title= "[##_page_title_##]"
    link(rel="alternate" type="application/rss+xml" href="[##_rss_url_##]" title="[##_title_##]")

  //- About body_id
    * tt-body-index = main page
    * tt-body-page = an article, a page
    * tt-body-guestbook = guestbook page
    * tt-body-tag = tag page, list of articles in specified tag
    * tt-body-category = list of articles in specified category
    * tt-body-search = list of articles which are results of search

  body#top(data-page-type="[##_body_id_##]"): s_t3

    include global/header

    main

      include global/read-helper

      div#content.left

        include global/notice

        include content-body/list
        include content-body/page
        include content-body/post
        include content-body/tags
        include content-body/guestbook

        include global/paginator

      aside#side-bar.right.no-print
        s_sidebar

          include content-side/about-myself
          include content-side/search
          include content-side/categories
          include content-side/notices
          include content-side/recents
          include content-side/links
          include content-side/twitter

    include global/footer

    include global/goto-top

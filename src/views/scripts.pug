//- Dark mode
script(async)
  | "use strict";
  |
  | (function () {
  |   var cq = document.cookie.split(";");
  |   cq.forEach(function (cr) {
  |     var c = cr.split("=");
  |     if ("modarkbul" === c[0].trim()) {
  |       if (c[1][0] === "t") {
  |         document.documentElement.style.setProperty("background-color", "#000000");
  |         document.documentElement.classList.add("dark");
  |       } else {
  |         document.documentElement.style.setProperty("background-color", "#eaeaea");
  |       }
  |     }
  |   });
  | })();
  |
  | window.PtConfig = {
  |   modarkbulDomain: '[##_var_cookie-domain_##]',
  |   hlColor: '[##_var_color-hl_##]',
  |   ulColor: '[##_var_color-ul_##]',
  |   pageType: '[##_body_id_##]',
  | };
  | window.PtQueue = {};
  | window.PtLateQueue = {};
  |
  | window.PtRegister = function (name, fn, lazy) {
  |   if (window.onload && window.PtLaunched) {
  |     window.PtLateQueue[name] = fn;
  |     window.PtStore[name] = {};
  |     try {
  |       fn(window.PtStore[name], window.PtConfig, function () {
  |         console.groupCollapsed('Result â€” ' + name);
  |         console.log(Array.from(arguments));
  |       });
  |     } catch (e) {
  |       console.debug(e);
  |     }
  |   } else {
  |     (lazy ? PtLateQueue : PtQueue)[name] = fn;
  |   }
  | };


//- Dark mode
script(async)
  | (function () {
  |   var cq = document.cookie.split(";");
  |   cq.forEach(function (cr) {
  |     var c = cr.split("=");
  |     if ("modarkbul" === c[0].trim()) {
  |       if (c[1][0] === "t") {
  |         document.documentElement.style.setProperty("background-color", "#000000");
  |         document.documentElement.classList.add("dark");
  |       } else {
  |         document.documentElement.style.setProperty("background-color", "#eaeaea");
  |       }
  |     }
  |   });
  | })();
  | window.PtConfig = {
  |   modarkbulDomain: '[##_var_cookie-domain_##]',
  |   hlColor: '[##_var_color-hl_##]',
  |   ulColor: '[##_var_color-ul_##]',
  | };

